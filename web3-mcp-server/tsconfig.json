{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    // CRITICAL: Skip all library checking (fixes node_modules errors)
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    
    // Disable strict type checking
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    
    // Disable other type checks
    "allowJs": true,
    "checkJs": false,
    
    // Build settings
    "outDir": "build",
    "rootDir": "src",
    "resolveJsonModule": true,
    
    // Additional permissive settings
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "useUnknownInCatchVariables": false,
    
    // Force ignore node_modules
    "typeRoots": ["node_modules/@types"],
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*", 
    "build/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/test/**/*",
    "generate-wallets.js",
    "**/node_modules/**/*"  // Extra safety to exclude all node_modules
  ],
  
  // Additional compiler settings to ignore node_modules
  "ts-node": {
    "skipProject": true,
    "skipIgnore": true
  }
}